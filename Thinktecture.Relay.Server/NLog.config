<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  
  <!-- See https://github.com/nlog/nlog/wiki/Configuration-file  for information on customizing logging rules and outputs. -->
  <targets async="true">
    <target xsi:type="Console" name="ConsoleTarget"
            layout="${longdate} ${uppercase:${level}}: ${newline}Message: ${message} ${onexception:inner=${newline}Exception: ${exception:format=tostring,StackTrace}}" />
    <target xsi:type="File" createDirs="true" name="FileTarget"
            layout="${longdate} ${uppercase:${level}}: ${newline}Message: ${message} ${onexception:inner=${newline}Exception: ${exception:format=tostring,StackTrace}}"
            fileName="${basedir}/logs/${shortdate}.log" />
  </targets>

  <rules>
    <logger name="*" writeTo="FileTarget" minlevel="Trace" />
    <logger name="*" writeTo="ConsoleTarget" minlevel="Trace" />
  </rules>
  
</nlog>
