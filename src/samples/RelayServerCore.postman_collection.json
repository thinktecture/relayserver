				},
				{
					"listen": "prerequest",
					"script": {
						"id": "6917a277-67b8-48c9-acd9-f5607732836d",
						"exec": [
							"var name = pm.environment.get(\"clientName\");",
							"if (!name) {",
							"    pm.environment.set(\"clientName\", \"someTenant\");",
							"}",
							""
